<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2">
            <input type="button" class="btn btn-small btn-primary btn-block" value=" Add New Contact" data-bind="click:$root.createProfile" />
            <hr />
        </div>@* Search list*@
        <div class="col-lg-10">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-2">
                            <h3 class="panel-title">Search Contact</h3>
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control input-sm" id="search" placeholder="Search with Name" data-bind="value: filter, valueUpdate: 'afterkeydown'" />
                        </div>
                        <div class="col-lg-3">
                            <h5> Total Number of Contacts</h5>
                        </div>
                        <div class="col-lg-1">
                          <h4>  <label class="success" data-bind="text: filteredItems().length"></label></h4>
                        </div>
                    </div>
                </div>

            </div>

            <table class="table table-responsive table-bordered table-condensed">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th></th>
                    <th></th>
                </tr>

                <tbody data-bind="foreach: filteredItems">
                    <tr>

                        <td class="name"><a data-bind="text: FirstName,click: function() {  $parent.editProfile($data); }"></a></td>
                        <td data-bind="text: LastName"></td>
                        <td data-bind="text: Email"></td>
                        <td>
                            <button class="btn btn-mini btn-success btn-block" data-bind="click: function() { $parent.editProfile($data); }">Edit</button>
                        </td>
                        <td>
                            <button class="btn btn-mini btn-danger btn-block" data-bind="click: $root.removeItem.bind($root)">remove</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>@* Display list*@
    </div>@*row*@
</div>@*container*@

<script src="~/Content/ViewModel/Contact1.js"></script>